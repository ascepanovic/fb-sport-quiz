extends layout

block content
  .container
    h1 Registracija
    p.info Unesite zeljeno korisnicko ime i lozinku.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Korisnicko ime')
      .form-group
        input.form-control(type='password', name="password", placeholder='Lozinka')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
    h4= info
